{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "cd packages/shared && pnpm run build && cd ../.. && cd apps/web && pnpm run build",
  "outputDirectory": "apps/web/.next",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/reset",
      "schedule": "0 14 * * 6"
    },
    {
      "path": "/api/cron/snapshot",
      "schedule": "0 * * * *"
    }
  ]
}
